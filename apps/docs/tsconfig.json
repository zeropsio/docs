{
  "extends": "tsconfig/docusaurus.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@site/*": ["./*"]
    }
  },
  "include": [
    "src/**/*",
    "docusaurus.config.js",
    "sidebars.js",
    "tailwind.config.js",
    "postcss.config.js",
    "content/**/*"
  ],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
